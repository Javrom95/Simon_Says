<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <gradient android:angle="-90" android:startColor="@color/info_button_false" android:endColor="@color/info_button_false" />
        </shape>
    </item>



    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <gradient android:angle="-90" android:startColor="@color/info_button_true" android:endColor="@color/info_button_true" />
        </shape>
    </item>

</selector>