<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <gradient android:angle="-90" android:startColor="@color/colorbutton8" android:endColor="@color/colorbutton8" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <gradient android:angle="-90" android:startColor="@color/colorpressedbutton8" android:endColor="@color/colorpressedbutton8" />
        </shape>
    </item>

</selector>