<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="60dp"/>
            <gradient android:angle="-90" android:startColor="@color/colorbutton2" android:endColor="@color/colorbutton2" />
        </shape>
    </item>



    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="60dp" />
            <gradient android:angle="-90" android:startColor="@color/colorpressedbutton2" android:endColor="@color/colorpressedbutton2" />
        </shape>
    </item>

</selector>